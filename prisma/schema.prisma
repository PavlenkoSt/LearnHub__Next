// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id                  Int      @id @default(autoincrement())
  email               String   @unique
  passwordHash        String
  firstName           String?
  lastName            String?
  image               String?
  coursesWhereTeacher Course[] @relation(name: "UserCoursesWhereTeacher")
  coursesWhereStudent Course[] @relation(name: "UserCoursesWhereStudent")
}

model Course {
  id           Int    @id @default(autoincrement())
  name         String
  teacherId    Int
  teacher      User   @relation(name: "UserCoursesWhereTeacher", fields: [teacherId], references: [id])
  participants User[] @relation(name: "UserCoursesWhereStudent")
}
